{
    "$schema": "http://json-schema.org/schema",
    "id": "SchematicsNodeCrudSBPro",
    "title": "SBPro Node Crud Schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the entity.",
            "type": "string"
        },
        "plural": {
            "description": "The pluralized name of the entity.",
            "type": "string"
        },
        "internal": {
            "description": "Use internal templates.",
            "type": "boolean"
        },
        "org": {
            "description": "Use org templates.",
            "type": "boolean"
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the crud.",
            "visible": false
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        }
    },
    "required": [
        "name",
        "path"
    ]
}
