{
    "$schema": "http://json-schema.org/schema",
    "id": "SchematicsNodeRoutesSBPro",
    "title": "SBPro Node Routes Schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the entity.",
            "type": "string"
        },
        "plural": {
            "description": "The pluralized name of the entity.",
            "type": "string"
        },
        "single": {
            "description": "Create single sibling route.",
            "type": "boolean"
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the crud.",
            "visible": false
        },
        "parentRoute": {
            "type": "string",
            "description": "The parent route."
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        }
    },
    "required": [
        "name",
        "path"
    ]
}
