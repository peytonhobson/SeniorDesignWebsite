{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["es2018", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./",
        "paths": {
            "@scripts/*": ["scripts/*"],
            "@src/*": ["src/*"],
            "@lib/*": ["src/lib/*"]
        },
        "resolveJsonModule": true,
        "strict": true,
        "target": "es2017",
        "typeRoots": ["node_modules/@types", "src/typings"]
    },
    "exclude": ["node_modules", "start-bootstrap", "dist", "build", "_templates", "migrations/**/*"]
}
